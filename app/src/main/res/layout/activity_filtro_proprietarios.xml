<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.FiltroProprietariosActivity"
    android:backgroundTint="@color/cor_fundo_telas" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- menu do topo da tela -->
        <include layout="@layout/menu_topo" />

        <!-- botão para aplicar o filtro de proprietários -->
        <Button
            android:id="@+id/btn_aplicar_filtro_proprietarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/txt_btn_aplicar_filtro_proprietarios"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- botão para limpar o filtro de proprietários -->
        <Button
            android:id="@+id/btn_limpar_filtro_proprietarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/txt_btn_limpar_filtro_proprietarios"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>